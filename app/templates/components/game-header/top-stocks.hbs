<div class="top-stocks-page">

  <h1 class="research-top-stocks">Research</h1>

  <div class="top-stocks-header">
    <i class="fa fa-line-chart fa-2x top-stocks-icon"></i>
    <h2 class="top-stocks-title">Top Stocks</h2>
    <span class="number-of-stocks">1-98
      <select>
        <optgroup>
          <option {{action all-click}}>All</option>
          <option {{action fifty-click}}>50</option>
          <option {{action twenty-five-click}}>25</option>
          <option {{action ten-click}}>10</option>
        </optgroup>
      </select>
    </span>
  </div>

  <div class="real-stock-table">
    <table class="stock-table">
      <tr class="top-stocks-options">
        <th class="ts-symbol">Sym</th>
        <th class="ts-name">Name</th>
        <th class="ts-league">League</th>
        <th class="ts-value">Value</th>
      </tr>

    {{#each content as |stock|}}
      <tr class="all-top-stocks">
        <td class="symbol-column">{{stock.symbol}}</td>
        <td class="name-column">{{link-to stock.Teams "header.stocks" stock.id}}</td>
        <td class="league-column">{{stock.Name}}</td>
        <td class="value-column">{{to-dollar stock.value}}</td>
      </tr>
    {{/each}}

    </table>
  </div>

</div>
