<div class="dashboard-page">

  <h1 class="dashboard-title">Dashboard</h1>

  <h2 class="d-recent-games">Recent Games</h2>


  <table class="dashboard-recent-games">
    <tr class="d-recent-games-list">
      <th class="d-date">Date</th>
      <th class="d-home">Home</th>
      <th class="d-away">Away</th>
      <th class="d-score">Score</th>
    </tr>

    {{#each model as |game|}}
    <tr class="d-recent-games">
      <th class="d-date-column">{{game.date}}</th>
      <th class="d-home-column">{{game.home.Teams}}</th>
      <th class="d-away-column">{{game.away.Teams}}</th>
      <th class="d-score-column">{{game.homeGoals}}-{{game.awayGoals}}</th>
    </tr>
    {{/each}}
  </table>


  <h2 class="d-top-stocks">Top Stocks</h2>


  <table class="dashboard-top-stocks">
    <tr class="d-top-stocks-list">
      <td class="d-symbol">Sym</td>
      <td class="d-name">Name</td>
      <td class="d-value">Value</td>
      <td class="d-streak">Streak</td>
    </tr>

    {{#each model as |stock|}}
    <tr class="d-top-stocks">
      <td class="d-symbol-column">{{stock.symbol}}</td>
      <td class="d-name-column">{{stock.Teams}}</td>
      <td class="d-value-column">{{stock.value}}</td>
      <td class="d-streak-column">{{stock.streak}}</td>
    </tr>
    {{/each}}
  </table>


  <h2 class="dashboard-trending-teams">Trending Teams</h2>

  <h3 class="dashboard-trending-up-title">Up</h3>


    <table class="dashboard-trending-up">
      <tr class="trending-up">
        <td class="tud-symbol">Sym</td>
        <td class="tud-name">Name</td>
        <td class="tud-rank-jump">Rank Jump</td>
        <td class="tud-stock-jump">Stock Jump</td>
      </tr>

      {{#each model as |team|}}
      <tr class="trending-up-teams">
        <td class="tud-symbol-column">{{team.symbol}}</td>
        <td class="tud-name-column">{{team.Teams}}</td>
        <td class="tud-rank-jump-column">Rank Jump</td>
        <td class="tud-stock-jump-column">Stock Jump</td>
      </tr>
      {{/each}}
    </table>


  <h3 class="dashboard-trending-down-title">Down</h3>


    <table class="dashboard-trending-down">
      <tr class="trending-down">
        <td class="tdd-symbol">Sym</td>
        <td class="tdd-name">Name</td>
        <td class="tdd-rank-drop">Rank Drop</td>
        <td class="tdd-stock-drop">Stock Drop</td>
      </tr>

      {{#each model as |team|}}
      <tr class="trending-down-teams">
        <td class="tdd-symbol">{{team.symbol}}</td>
        <td class="tdd-name">{{team.Teams}}</td>
        <td class="tdd-rank-drop">Rank Drop</td>
        <td class="tdd-stock-drop">Stock Drop</td>
      </tr>
      {{/each}}
    </table>


</div>
